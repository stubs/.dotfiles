#!/usr/bin/env bash

# Custom GREP syntax highlights
alias grep='grep --color=auto'
alias egrep='egrep --color=auto'
alias fgrep='fgrep --color=auto'

# Custom ls command output aliases
alias ls='ls -GFh --color=yes'
alias ll='ls -la --color=yes'
alias l.='ls -a --color=yes'

# Custom cd command behavior
alias ..='cd ..'
alias ...='cd ..; cd ..'

# Custom tree output
alias tree='tree -C -L 3'
alias dtree='tree -C -d -L 3'

# use intellij-idea's diff tool
alias idiff='idea diff'

# file counts in dirs
alias files_in='find . -not -path "*/\.*" -type f -exec dirname {} \; | sort | uniq -c'

# brew stuff
alias bu='brew update'
alias bco='brew cask outdated --greedy'

# work machine aliases
if [[ $HOSTNAME = "ABT-AG-h03647"* ]]; then
    alias ssht='ssh taskmaster1'
fi
